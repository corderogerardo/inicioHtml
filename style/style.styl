//Mixins
bordes(n)
	-webkit-border-radius n
	-moz-border-radius n
	-ms-border-radius n
	-o-border-radius n
	border-radius n


body
	/* el atributo background se usa en body, asi como en etiquetas que hagan la funcion de contenedor, 
	div, article, section, footer...
	*/
	background-color rosa
	color concreto
	/* el atributo font-family sirve para agregarle un tipo de fuente al la pagina web */
	font-family 'Helvetica', sans-serif
	margin 0
	padding 0
	text-align center
	text-rendering optimizeLegibility
	
/*	caja principal de la primera seccion de la web	*/
/*CAJA con borde NEGRO cabecera ES LA CAJA EXTERNA MAS GRANDE DE TODAS QUE CONTENDRA A TODAS LAS DEMAS*/
.cabecera
	background-color rosapomegranade
	border 2px solid black
	height 450px
	width 100%	
	/*INICIO MENU
		CAJA con borde AMARILLO menu
		CONTENDRA AL MENU
		es importante observar que la caja va de esquina a esquina esta al 100% del ancho de la pantalla 
			*/
#menu
	//border 1px solid yellow
	height 100px
	margin 0
	padding 0
	width 100%
	/*CAJA con borde ANARANJADO hace referencia a la etiqueta NAV*/
	nav
		//border 2px solid anaranjado
		font-size 1.2em
		height 100%
		line-height 100px
		margin-left 45%
		width 700px
	ul
		height 100px		
		margin 0
		padding 0
		list-style none
		/*CAJA con borde BLANCO hace referencia a la etiqueta LI*/
	li
		border 1px solid blanco
		display inline
		padding  0 0.8em 0 0
		/*CAJA con borde VERDE OSCURO hace referencia a la etiqueta A*/
	a
		border 1px solid nephritis
		color blanco
		text-decoration none
	
	/*aca utilizamos el parametro hover, el cual es la accion o lo que va a ocurrir cuando 
		coloquemos el cursos sobre el objeto que estamos manipulando o al cual vamos a hacer click
		*/				
	a:hover
		color pomegranade
		text-decoration none
	a:active
		background-color blanco
		bordes 5px
		text-decoration none
/*Fin del menu

