	background-color blanco
	font-family "Helvetica" sans-serif
	color #000
	margin 0
	padding 0
	width 100%
	height 300px
#cajaArticulos
	/*Esta caja contendra a las 3 cajas o culumnas de los articulos*/	
	border 3px solid yellow
	margin 0
	padding 0
	display inline-flex
	flex-direction row
	justify-content center
	order 2
	height 100%
	width 90%
